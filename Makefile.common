##@ Bundle and Catalog

# A comma-separated list of bundle images (e.g. make catalog-build BUNDLE_IMGS=example.com/operator-bundle:v0.1.0,example.com/operator-bundle:v0.2.0).
# These images MUST exist in a registry and be pull-able.
BUNDLE_IMGS ?= $(BUNDLE_IMG)

# The image tag given to the resulting catalog image (e.g. make catalog-build CATALOG_IMG=example.com/operator-catalog:v0.2.0).
CATALOG_IMG ?= $(IMAGE_TAG_BASE)-catalog:v$(VERSION)$(GIT_TAG)

# Set CATALOG_BASE_IMG to an existing catalog image tag to add $BUNDLE_IMGS to that image.
ifneq ($(origin CATALOG_BASE_IMG), undefined)
FROM_INDEX_OPT := --from-index $(CATALOG_BASE_IMG)
endif


.PHONY: common-bundle
common-bundle: manifests kustomize operator-sdk ## Generate bundle manifests and metadata, then validate generated files.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Generating bundle manifests and metadata$(RESET)"
	$(OPERATOR_SDK) generate kustomize manifests -q
	cd config/manager && $(KUSTOMIZE) edit set image controller=$(IMG)
	$(KUSTOMIZE) build config/manifests | $(OPERATOR_SDK) generate bundle $(BUNDLE_GEN_FLAGS)
	$(OPERATOR_SDK) bundle validate ./bundle

.PHONY: common-bundle-build
common-bundle-build: ## Build the bundle image.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Building bundle image $(BUNDLE_IMG)$(RESET)"
	docker build -f bundle.Dockerfile -t $(BUNDLE_IMG) .

.PHONY: common-bundle-push
common-bundle-push: ## Push the bundle image.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Pushing bundle image $(BUNDLE_IMG)$(RESET)"
	$(MAKE) docker-push IMG=$(BUNDLE_IMG)

# Render bundle to the catalog index.
.PHONY: common-catalog-render
common-catalog-render: opm yq generate-catalog-index ## Render bundle to catalog index.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Rendering catalog index with bundle images$(RESET)"
	PATH="$(LOCALBIN):$$PATH" \
	bash -c $(CATALOG_INDEX_SCRIPT) "$(DOCKER_REPO_BASE)" "$(OPERATOR_NAME)" "$(CATALOG_DIR_PATH)" "$(VERSION)" "$(GIT_TAG)"

# Build a catalog image by adding bundle images to an empty catalog using the operator package manager tool, 'opm'.
# This recipe invokes 'opm' in 'semver' bundle add mode. For more information on add modes, see:
# https://github.com/operator-framework/community-operators/blob/7f1438c/docs/packaging-operator.md#updating-your-existing-operator
.PHONY: common-catalog-build
common-catalog-build: opm ## Build a catalog image.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Building catalog image $(CATALOG_IMG) with bundles: $(BUNDLE_IMGS)$(RESET)"
	$(OPM) index add \
		--container-tool docker \
		--mode semver \
		--tag $(CATALOG_IMG) \
		--bundles $(BUNDLE_IMGS) \
		$(FROM_INDEX_OPT)

# Push the catalog image.
.PHONY: common-catalog-push
common-catalog-push: ## Push a catalog image.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Pushing catalog image $(CATALOG_IMG)$(RESET)"
	$(MAKE) docker-push IMG=$(CATALOG_IMG)

# Push the catalog image.
.PHONY: common-publish
common-publish: ## Build and publish operator.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Publishing operator: building and pushing bundle and catalog images$(RESET)"
	echo $(BUNDLE_IMGS)
	$(MAKE) manifests build docker-build docker-push
	rm -f bin/kustomize
	$(MAKE) bundle bundle-build bundle-push
	$(MAKE) catalog-render catalog-build catalog-push
