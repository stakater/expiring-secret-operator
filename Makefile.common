define download-file
	@if [ -f "$(2)" ]; then \
		echo "$(2) already exists; skipping download"; \
	else \
		echo "Downloading $(1) -> $(2)"; \
		mkdir -p $(dir $(2)); \
		curl -H 'Cache-Control: no-cache' -fsSL $(CURL_OPTS) "$(1)" -o "$(2)" || { echo "Failed to download $(1)"; exit 1; }; \
	fi
endef

.PHONY: common-download-helm-mk
