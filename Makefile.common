.PHONY: common-check_license
common-check_license:
	@echo "$(FG_BLUE)>> $(FG_GREEN)checking license header$(RESET)"
	@licRes=$$(for file in $$(find . -type f -iname '*.go' ! -path './vendor/*') ; do \
               awk 'NR<=3' $$file | grep -Eq "(Copyright|generated|GENERATED)" || echo $$file; \
       done); \
       if [ -n "$${licRes}" ]; then \
               echo "license header checking failed:"; echo "$${licRes}"; \
               exit 1; \
       fi


.PHONY: common-build
common-build: manifests generate fmt vet ## Build manager binary.
	@echo "$(FG_BLUE)>> $(FG_GREEN)building manager binary$(RESET)"
	go build -o bin/manager cmd/main.go

.PHONY: common-run
common-run: manifests generate fmt vet ## Run a controller from your host.
	@echo "$(FG_BLUE)>> $(FG_GREEN)running manager$(RESET)"
	go run ./cmd/main.go

# If you wish to build the manager image targeting other platforms you can use the --platform flag.
# (i.e. docker build --platform linux/arm64). However, you must enable docker buildKit for it.
# More info: https://docs.docker.com/develop/develop-images/build_enhancements/
.PHONY: common-docker-build
common-docker-build: ## Build docker image with the manager.
	@echo "$(FG_BLUE)>> $(FG_GREEN)building docker image ${IMG}$(RESET)"
ifndef CI
	$(CONTAINER_TOOL) build -f local.Dockerfile --ssh default=$${SSH_AUTH_SOCK} -t ${IMG} .
else
	$(CONTAINER_TOOL) build --build-arg GIT_USER=${GIT_USER} --build-arg GIT_TOKEN=${GIT_TOKEN} -t ${IMG} .
endif

.PHONY: common-docker-push
common-docker-push: ## Push docker image with the manager.
	@echo "$(FG_BLUE)>> $(FG_GREEN)pushing docker image ${IMG}$(RESET)"
	$(CONTAINER_TOOL) push ${IMG}

# PLATFORMS defines the target platforms for the manager image be built to provide support to multiple
# architectures. (i.e. make docker-buildx IMG=myregistry/mypoperator:0.0.1). To use this option you need to:
# - be able to use docker buildx. More info: https://docs.docker.com/build/buildx/
# - have enabled BuildKit. More info: https://docs.docker.com/develop/develop-images/build_enhancements/
# - be able to push the image to your registry (i.e. if you do not set a valid value via IMG=<myregistry/image:<tag>> then the export will fail)
# To adequately provide solutions that are compatible with multiple platforms, you should consider using this option.
PLATFORMS ?= linux/arm64,linux/amd64,linux/s390x,linux/ppc64le
.PHONY: common-docker-buildx
common-docker-buildx: ## Build and push docker image for the manager for cross-platform support
	@echo "$(FG_BLUE)>> $(FG_GREEN)building and pushing docker image ${IMG} for platforms: ${PLATFORMS}$(RESET)"
	@set -euo pipefail; \
	# make a temp Dockerfile that injects --platform=${BUILDPLATFORM} in the FIRST FROM
	tmp="$$(mktemp -t Dockerfile.cross.XXXXXX)"; \
	awk 'BEGIN{done=0} !done && $$1=="FROM"{ sub(/^FROM/,"FROM --platform=\\$${BUILDPLATFORM}"); done=1 } {print}' Dockerfile > "$$tmp"; \
	# ensure the builder exists (idempotent)
	if ! $(CONTAINER_TOOL) buildx inspect $(PROJECT_NAME)-builder >/dev/null 2>&1; then \
	  $(CONTAINER_TOOL) buildx create --name $(PROJECT_NAME)-builder --driver docker-container >/dev/null; \
	fi; \
	# build using that builder (don't mutate global builder state)
	$(CONTAINER_TOOL) buildx build \
	  --builder $(PROJECT_NAME)-builder \
	  --push \
	  --platform="$(PLATFORMS)" \
	  --tag "$(IMG)" \
	  -f "$$tmp" .; \
	rm -f "$$tmp"

.PHONY: common-build-installer

common-build-installer: manifests generate kustomize ## Generate a consolidated YAML with CRDs and deployment.
	@echo "$(FG_BLUE)>> $(FG_GREEN)building installer manifests$(RESET)"
	mkdir -p dist
	cd config/manager && $(KUSTOMIZE) edit set image controller=${IMG}
	$(KUSTOMIZE) build config/default > dist/install.yaml

.PHONY: common-cluster
common-cluster: setup-cluster ## Setup Kind cluster with specified action (default: cluster). Usage: make cluster ACTION=<action>
	@echo "$(FG_BLUE)>> $(FG_GREEN)setting up Kind cluster with action '$(ACTION)'$(RESET)"
	TEST_CLUSTER_NAME=$(TEST_CLUSTER_NAME) \
	IMG=$(IMG) \
	CONTAINER_TOOL=$(CONTAINER_TOOL) \
	KIND=$(KIND) \
	KIND_VERSION=$(KIND_VERSION) \
	LOCALBIN=$(LOCALBIN) \
	OPERATOR_NAMESPACE=$(OPERATOR_NS) \
	PULL_SECRET_NAME=$(PULL_SECRET_NAME) \
	GHCR_USERNAME=$(GHCR_USERNAME) \
	GHCR_TOKEN=$(GHCR_TOKEN) \
	bash $(SETUP_CLUSTER) $(ACTION)


.PHONY: common-load-image
common-load-image: kind ## Load local image into Kind (if present).
	@echo "$(FG_BLUE)>> $(FG_GREEN)checking for local image to load into Kind cluster$(RESET)"
	@if $(CONTAINER_TOOL) images --format "table {{.Repository}}:{{.Tag}}" | grep "^$(IMG)"; then \
		echo "$(FG_BLUE)>> $(FG_GREEN)Found local image $(IMG), loading into Kind cluster $(TEST_CLUSTER_NAME)$(RESET)"; \
		$(KIND) load docker-image $(IMG) --name $(TEST_CLUSTER_NAME); \
	else \
		echo "$(FG_BLUE)>> $(FG_RED)Local image $(IMG) not found, cluster will pull from registry$(RESET)"; \
	fi

.PHONY: common-pull-secret
common-pull-secret: ## Create GHCR pull secret in operator namespace.
	@echo "$(FG_BLUE)>> $(FG_GREEN)creating pull secret in namespace '$(OPERATOR_NS)'$(RESET)"
	$(KUBECTL) create namespace $(OPERATOR_NS) --dry-run=client -o yaml | $(KUBECTL) apply -f - $(KUBECTL_OUTPUT_REDIRECT); \
	$(KUBECTL) -n $(OPERATOR_NS) create secret docker-registry $(PULL_SECRET_NAME) \
		--docker-server=$(DOCKER_REPO_HOST) \
		--docker-username=${GHCR_USERNAME} \
		--docker-password=${GHCR_TOKEN} \
		--dry-run=client -o yaml | $(KUBECTL) apply -f - $(KUBECTL_OUTPUT_REDIRECT)

##@ Deployment

ifndef ignore-not-found
  ignore-not-found = false
endif


define rollout-controller-with-retry
@bash -ceu '\
	ns="$(OPERATOR_NS)"; \
	dep="$(OPERATOR_NAME)-controller-manager"; \
	echo "$(FG_BLUE)>> $(FG_GREEN)Ensuring a fresh rollout (annotation bump)$(RESET)"; \
	$(KUBECTL) -n "$$ns" patch deploy/"$$dep" --type merge \
	  -p "{\"spec\":{\"template\":{\"metadata\":{\"annotations\":{\"rollout.ts\":\"$$(date +%s)\"}}}}}" || true; \
	\
	echo "$(FG_BLUE)>> $(FG_GREEN)Waiting for rollout (90s fast path)…$(RESET)"; \
	if ! $(KUBECTL) -n "$$ns" rollout status deploy/"$$dep" --timeout=90s; then \
	  echo "$(FG_BLUE)>> $(FG_RED)Rollout stalled — collecting debug info before restart$(RESET)"; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)---- Deployment describe ----$(RESET)"; \
	  $(KUBECTL) -n "$$ns" describe deploy/"$$dep" || true; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)---- Deployment resource ----$(RESET)"; \
	  $(KUBECTL) -n "$$ns" get deploy/"$$dep" -o yaml || true; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)---- Secrets ----$(RESET)"; \
	  $(KUBECTL) -n "$$ns" get secrets -o wide || true; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)---- ReplicaSets ----$(RESET)"; \
	  $(KUBECTL) -n "$$ns" get rs -l control-plane=controller-manager -o wide || true; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)---- Pods (wide) ----$(RESET)"; \
	  $(KUBECTL) -n "$$ns" get pods -l control-plane=controller-manager -o wide || true; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)---- Pod events (recent 20) ----$(RESET)"; \
	  $(KUBECTL) -n "$$ns" get events --sort-by=.lastTimestamp | tail -n 20 || true; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)---- Pod logs (last 50 lines, if any) ----$(RESET)"; \
	  for p in $$( $(KUBECTL) -n "$$ns" get pods -l control-plane=controller-manager -o name 2>/dev/null ); do \
	    echo "$(FG_BLUE)>> $(FG_GREEN)-- $$p --$(RESET)"; \
	    $(KUBECTL) -n "$$ns" logs "$$p" --tail=50 2>/dev/null || true; \
	  done; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)End of debug info$(RESET)"; \
	  \
	  echo "$(FG_BLUE)>> $(FG_GREEN)Performing clean restart (scale 0 → 1)…$(RESET)"; \
	  $(KUBECTL) -n "$$ns" scale deploy/"$$dep" --replicas=0; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)Waiting for pods to terminate…$(RESET)"; \
	  for i in $$(seq 1 24); do \
	    cnt="$$( $(KUBECTL) -n "$$ns" get pods -l control-plane=controller-manager --no-headers 2>/dev/null | wc -l | tr -d " " )"; \
	    [ "$$cnt" = "0" ] && break; \
	    sleep 5; \
	  done; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)Scaling deployment back up$(RESET)"; \
	  $(KUBECTL) -n "$$ns" scale deploy/"$$dep" --replicas=1; \
	  echo "$(FG_BLUE)>> $(FG_GREEN)Retrying rollout (210s)$(RESET)"; \
	  $(KUBECTL) -n "$$ns" rollout status deploy/"$$dep" --timeout=210s; \
	fi; \
	\
	echo "$(FG_BLUE)>> $(FG_GREEN)Waiting for deployment availability…$(RESET)"; \
	$(KUBECTL) -n "$$ns" wait --for=condition=Available deploy/"$$dep" --timeout=120s; \
	\
	echo "$(FG_BLUE)>> $(FG_GREEN)Deployment $$dep successfully rolled out and ready.$(RESET)"; \
	'
endef

.PHONY: common-install
common-install: manifests kustomize ## Install CRDs into the K8s cluster specified in ~/.kube/config.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Installing CRDs into cluster$(RESET)"
	$(KUSTOMIZE) build config/crd | $(KUBECTL) apply -f -

.PHONY: common-uninstall
common-uninstall: manifests kustomize ## Uninstall CRDs from the K8s cluster specified in ~/.kube/config. Call with ignore-not-found=true to ignore resource not found errors during deletion.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Uninstalling CRDs from cluster$(RESET)"
	$(KUSTOMIZE) build config/crd | $(KUBECTL) delete --ignore-not-found=$(ignore-not-found) -f -

.PHONY: common-deploy
common-deploy: manifests kustomize cluster install-dependencies install ## Deploy controller to the K8s cluster specified in ~/.kube/config.
	@echo "$(FG_BLUE)>> $(FG_GREEN)Deploying controller to cluster$(RESET)"
	cd config/manager && $(KUSTOMIZE) edit set image controller=${IMG}
	cd config/default && $(KUSTOMIZE) edit set namespace $(OPERATOR_NS)
	$(KUSTOMIZE) build config/default | $(KUBECTL) apply -f - $(KUBECTL_OUTPUT_REDIRECT)
	$(call rollout-controller-with-retry)

